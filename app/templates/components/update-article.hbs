{{#if updateArticleForm}}
  <h4>Update {{article.headline}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=article.author}}
      </div>

      <div class="form-group">
        <label for="headline">Headline</label>
        {{input value=headline id="headline" placeholder=article.headline}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=article.category}}
      </div>

      <div class="form-group">
        <label for="content">Article Content</label>
        {{textarea value=article.content id="content"}}
      </div>

      <div class="form-group">
        <label for="stardate">Stardate</label>
        {{input value=stardate id="stardate" placeholder=article.stardate}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateArticleForm'}}>Update</button>
{{/if}}
